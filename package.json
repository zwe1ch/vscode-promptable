{
  "name": "promptable",
  "displayName": "Promptable",
  "description": "Copy files and folders as prompt-ready AI context. Supports folders, multi-select, .gitignore, and binary-safe output.",
  "version": "1.0.1",
  "publisher": "zwe1ch",
  "author": {
    "name": "Rayk Jackisch",
    "email": "rayk@jackisch.net"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "prompt",
    "llm",
    "chatgpt",
    "claude",
    "context",
    "copy",
    "developer-tools",
    "gitignore",
    "code-review"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptable.copy",
        "title": "Copy as AI Context",
        "category": "Promptable"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "promptable.copy",
          "group": "9_cutcopypaste@4",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "promptable.copy",
          "group": "5_copy@2",
          "when": "resourceScheme == file || resourceScheme == folder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zwe1ch/vscode-promptable.git"
  },
  "license": "MIT"
}
